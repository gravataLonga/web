{
    "name": "gravatalonga/lumice",
    "description": "my go to framework for silly & tiny programs",
    "license": "proprietary",
    "require": {
        "php": "^8.4",
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "twig/twig": "^3.0",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "vlucas/phpdotenv": "^5.6",
        "ext-curl" : "*",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.9",
        "slim/csrf": "^1.5",
        "odan/session": "^6.3",
        "league/uri": "^7.5",
        "ext-openssl" : "*",
        "symfony/console": "^7.2"
    },
    "autoload" : {
        "psr-4" : {
            "App\\": "app/",
            "Gravatalonga\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    }
}
